@model NewsBlog.ViewModel.LoginDataUserViewModel
@{
    ViewData["Title"] = "Пользователь";
    var userName = Model.UserName;
    var firstName = Model.FirstName;
    var lastName = Model.LastName;
    var password = Model.Password;
    var errorMessage = Model.ErrorMessage;
}

<!DOCTYPE html>
<html lang="en">
<body>
    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="error-message">
            @errorMessage
        </div>
    }
    <div class="blog-cards">
        <div class="registration-card-container">
            <div class="registration-card">
                <div class="registration-content ">
                    <p class="blog-text">Введите логин</p>
                    <input id="userName" class="blog-text" placeholder="Логин" value=@userName /><br />
                    <p class="blog-text">Введите имя</p>
                    <input id="firstName" class="blog-text" placeholder="Имя" value=@firstName /><br />
                    <p class="blog-text">Введите фамилию</p>
                    <input id="lastName" class="blog-text" placeholder="Фамилия" value=@lastName /><br />
                    <p class="blog-text">Введите пароль</p>
                    <input id="password" class="blog-text" type="password" placeholder="Пароль" value=@password /><br />
                    <p class="blog-text">Повторите пароль</p>
                    <input id="password" class="blog-text" type="password" placeholder="Пароль" /><br /><br />
                    <a class="read-more" id="RegistrationUser" OnClick="RegistrationUser()" style="width:100%;">Зарегистрироваться</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
