<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsBlog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsBlog.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="News" asp-action="AllNews">Главная</a>
                <input class="nav-link text-dark" id="searchNews" name="searchNews" placeholder="Найти" autocomplete="off" style="width: 550px; margin-left: 550px;" />
                <img src="~/css/Resources/search.png" alt="Please load image" style="width: 30px;height: 30px; margin-top:5px;margin-bottom:5px;margin-right:5px;margin-left: 15px;" />

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="display: flex;align-items: right;justify-content: right;">
                        <li class="nav-item">
                        <a class="navbar-text" style="margin-right: 20px" asp-area="" asp-controller="Registration" asp-action="Index">Зарегистрироваться</a>
                        </li>
                        <li class="nav-item">
                        <a class="navbar-text" style="margin-right: 20px" asp-area="" asp-controller="Login" asp-action="Index">Войти</a>
                        </li>                                            
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div id="searchNewsResult" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - NewsBlog - <a asp-area="" asp-controller="Home"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
